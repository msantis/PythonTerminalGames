# Constantes
SALARIO_MINIMO = 1300000  # Salario mínimo legal vigente
AUX_TRANSPORTE = 162000   # Auxilio mensual de transporte vigente

# Función para leer datos de entrada
def leer_datos_empleado():
    empleados = []
    n = int(input("Ingrese la cantidad de empleados: "))
    
    for i in range(n):
        print(f"\nEmpleado {i + 1}:")
        cedula = input("Cédula del empleado: ")
        nombre = input("Nombres y apellidos del empleado: ")
        salario_basico = float(input("Salario básico: "))
        dias_laborados = int(input("Número de días laborados: "))
        comision_ventas = float(input("Ventas realizadas en el mes: "))
        horas_extras = int(input("Número de horas extras: "))
        prestamos = float(input("Deducciones por préstamos: "))
        
        empleado = {
            'cedula': cedula,
            'nombre': nombre,
            'salario_basico': salario_basico,
            'dias_laborados': dias_laborados,
            'comision_ventas': comision_ventas,
            'horas_extras': horas_extras,
            'prestamos': prestamos
        }
        empleados.append(empleado)
    
    return empleados

# Función para calcular y mostrar los resultados de la nómina
def calcular_nomina(empleados):
    total_salarios = 0
    mayor_salario = float('-inf')
    menor_salario = float('inf')
    empleado_mayor_salario = ""
    empleado_menor_salario = ""
    
    for empleado in empleados:
        salario_diario = empleado['salario_basico'] / 30
        salario_dias = salario_diario * empleado['dias_laborados']
        
        # Cálculo de horas extras (30% sobre el valor de una hora normal)
        valor_hora_extra = (salario_diario / 8) * 1.3
        salario_horas_extras = valor_hora_extra * empleado['horas_extras']
        salario_horas_extras = round(salario_horas_extras)
        
        # Comisión por ventas (20% de las ventas)
        comision_ventas = empleado['comision_ventas'] * 0.2
        comision_ventas = round( comision_ventas)
        
        # Auxilio de transporte (si aplica)
        aux_transporte = AUX_TRANSPORTE if empleado['salario_basico'] <= 2 * SALARIO_MINIMO else 0
        
        # Salario neto
        salario_neto = salario_dias + salario_horas_extras + comision_ventas + aux_transporte - empleado['prestamos']
        
        # Acumular para el cálculo de promedio
        total_salarios += salario_neto
        
        # Identificar mayor y menor salario
        if salario_neto > mayor_salario:
            mayor_salario = salario_neto
            empleado_mayor_salario = empleado['nombre']
        
        if salario_neto < menor_salario:
            menor_salario = salario_neto
            empleado_menor_salario = empleado['nombre']
        
        # Imprimir datos del empleado
        print("\n--- Detalles de Nómina ---")
        print(f"Cédula: {empleado['cedula']}")
        print(f"Nombre: {empleado['nombre']}")
        print(f"Salario Básico: {empleado['salario_basico']}")
        print(f"Auxilio de Transporte: {aux_transporte}")
        print(f"Comisión de Ventas: {comision_ventas}")
        print(f"Préstamos: {empleado['prestamos']}")
        print(f"Salario Neto a Recibir: {salario_neto}")
    
    # Calcular promedio de salarios
    promedio_salarios = total_salarios / len(empleados)
    
    # Imprimir resumen final
    print("\n--- Resumen de Nómina ---")
    print(f"Promedio de salarios: {promedio_salarios}")
    print(f"Mayor salario: {mayor_salario} corresponde a {empleado_mayor_salario}")
    print(f"Menor salario: {menor_salario} corresponde a {empleado_menor_salario}")

# Programa principal
def main():
    empleados = leer_datos_empleado()
    calcular_nomina(empleados)

# Ejecutar el programa
if __name__ == "__main__":
    main()
